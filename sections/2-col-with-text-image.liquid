<div class="{{ section.settings.sec_cus_class }} section-img">
  <div class="row">
      <div class="sec-head-text"><h2>{{ section.settings.headline }}</h2></div>
      <div class="sec-data">
        <div class="left-sec">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'sub_content' -%}
                  {{ block.settings.right_content }}
            {%- endcase -%}
          {%- endfor -%}
        </div>
        <div class="rigthsec">
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'sub_head' -%}
                  <h2
                    class="sec-text__heading inline-richtext"
                  >
                    {{ block.settings.sub_heading }}
                  </h2>
                {%- when 'sub_image' -%}
                  {{ block.settings.image| image_url: width: 600, height:400|image_tag  }}
              {%- endcase -%}
            {%- endfor -%}
        </div>
      </div>
      
  </div>
</div>
{% schema %}
{
  "name": "2 Col with text & image",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label":"Headline",
    },
    {
      "type": "color",
      "id": "body_text",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    },
    {
      "type": "text",
      "id":"sec_cus_class",
      "label": "Custom CSS Class",
      "default":"Type your own CSS Class"
    }

  ],
  "blocks": [
    {
      "name":"Sub Heading",
      "limit":1,
      "type": "sub_head",
      "settings": [
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub Heading",
          "placeholder": "Sub title of image"
        },
        {
          "type": "color",
          "id": "sub_text_color",
          "label": "Text Color",
          "default": "#000000"
        }      
      ]

    },
    {
      "name":"Text",
      "limit":1,
      "type": "sub_content",
      "settings":[
        {
          "type": "html",
          "id": "right_content",
          "label": "Content Block"
        },
        {
          "type": "color",
          "id": "Content_text_color",
          "label": "Text Color",
          "default": "#000000"
        }       
      ]
    },
    {
      "name":"Image",
      "limit":1,
      "type": "sub_image",
      "settings":[
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }      
      ]
    }
  ],
  "presets": [
    {
      "name": "2 Columm with text & image",
      "blocks": [
        {
          "type": "sub_head"
        },
        {
          "type": "sub_content"
        },
        {
          "type": "sub_image"
        }
      ]
    }
  ]
}
{% endschema %}
