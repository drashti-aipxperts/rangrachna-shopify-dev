{%- style -%}
.sec-data{
  display: flex;
  justify-content:center;
}
.section-img{
  background : {{ section.settings.background }}
}
.sec-head-text h2 {
    color: #A55E3F;
    font-size: {{ section.settings.head_fontsize }};
    text-align: {{ section.settings.head_textalign }}
}
{% if section.settings.  == true %}
  .sec-head-text{
    display:none;
  }
{% endif %}
.sec-data {
  background : {{ section.settings.sub_background }}
}
{%  endstyle %}
<div class="section-img {{ section.settings.sec_cus_class }}">
  <div class="page-width">
      <div class="sec-head-text"><h2>{{ section.settings.headline }}</h2></div>
      <div class="sec-data {% if section.settings.sec_layout == 'image_first' %}sec-col-reverse{% endif %}">
        <div class="left-sec">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'sub_content' -%}
                  {{ block.settings.right_content }}
            {%- endcase -%}
          {%- endfor -%}
        </div>
        <div class="rigthsec">
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'sub_head' -%}
                  <h2 class="sec-text__heading inline-richtext">
                    {{ block.settings.sub_heading }}
                  </h2>
                {%- when 'sub_image' -%}
                  {{ block.settings.image| image_url: width: 600, height:400|image_tag  }}
              {%- endcase -%}
            {%- endfor -%}
        </div>
      </div>
      
  </div>
</div>
{% schema %}
{
  "name": "2 Col with text & image",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label":"Headline",
    },
    {
      "type": "text",
      "id": "head_fontsize",
      "label": "Font Size",
      "info": "font size on pixel,em,percentage"
    },
    {
      "type": "select",
      "id": "head_textalign",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value":"right",
          "label":"Right"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "hide_head",
      "label": "Hide Title from desktop & mobile",
      "default":false
    },
    {
      "type": "color",
      "id": "body_text",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    },
    {
      "type": "text",
      "id":"sec_cus_class",
      "label": "Custom CSS Class"
    },
    {
      "type": "select",
      "id": "sec_layout",
      "options": [
        {
          "value": "image_first",
          "label": "Image First"
        },
        {
          "value": "text_first",
          "label": "Image Second"
        }
      ],
      "default": "image_first",
      "label": "Image Placement",
      "info": "Image first is the default mobile layout"
    },
    {
      "type": "color_background",
      "id": "sub_background",
      "label": "Inner Section Background",
      "default": "linear-gradient(#ffffff, #000000)"
    }
  ],
  "blocks": [
    {
      "name":"Sub Heading",
      "limit":1,
      "type": "sub_head",
      "settings": [
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub Heading",
          "placeholder": "Sub title of image"
        },
        {
          "type": "color",
          "id": "sub_text_color",
          "label": "Text Color",
          "default": "#000000"
        }      
      ]

    },
    {
      "name":"Text",
      "limit":1,
      "type": "sub_content",
      "settings":[
        {
          "type": "html",
          "id": "right_content",
          "label": "Content Block"
        },
        {
          "type": "color",
          "id": "Content_text_color",
          "label": "Text Color",
          "default": "#000000"
        }       
      ]
    },
    {
      "name":"Image",
      "limit":1,
      "type": "sub_image",
      "settings":[
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }      
      ]
    }
  ],
  "presets": [
    {
      "name": "2 Columm with text & image",
      "blocks": [
        {
          "type": "sub_head"
        },
        {
          "type": "sub_content"
        },
        {
          "type": "sub_image"
        }
      ]
    }
  ]
}
{% endschema %}
