<h1>{{ section.settings.headline }}</h1>
{% schema %}
{
  "name": "2 Col with text & image",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label":"Headline",
    },
    {
      "type": "color",
      "id": "body_text",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    }

  ],
  "blocks": [
    {
      "name":"Sub Heading",
      "limit":1,
      "type": "sub_head",
      "settings": [
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub Heading",
          "placeholder": "Sub title of image"
        },
        {
          "type": "color",
          "id": "sub_text_color",
          "label": "Text Color",
          "default": "#000000"
        }      
      ]

    },
    {
      "name":"Text",
      "limit":1,
      "type": "sub_content",
      "settings":[
        {
          "type": "html",
          "id": "right_content",
          "label": "Content Block"
        },
        {
          "type": "color",
          "id": "Content_text_color",
          "label": "Text Color",
          "default": "#000000"
        }       
      ]
    },
    {
      "name":"Image",
      "limit":1,
      "type": "sub_image",
      "settings":[
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }      
      ]
    }
  ],
  "presets": [
    {
      "name": "2 Columm with text & image"
    }
  ]
}
{% endschema %}
